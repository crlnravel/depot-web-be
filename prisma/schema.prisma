generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  password String
  role     Role
  alamat   String    @default("")
  payments Payment[]
}

model Payment {
  id        String        @id
  amount    Decimal
  quantity  Int
  timestamp DateTime      @default(now())
  status    PaymentStatus
  user      User          @relation(fields: [userId], references: [id])
  userId    Int
  product   Product       @relation(fields: [productId], references: [id])
  productId Int
}

model Product {
  id           Int         @id @default(autoincrement())
  name         String
  description  String
  price        Decimal
  stock        Int
  imgUrl       String      @default("")
  rating       Decimal     @default(0)
  totalRatings Int         @default(0)
  category     Category
  kualitasAir  KualitasAir
  payments     Payment[]
}

enum Role {
  USER
  ADMIN
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum Category {
  GALON_BARU
  GALON_ISI_ULANG
  REFILL_AIR_MINUM
}

enum KualitasAir {
  SANGAT_BAIK
  BAIK
  CUKUP
  BURUK
}
